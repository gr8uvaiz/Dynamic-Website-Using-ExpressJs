<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/style.css">
    <title>Uvaiz IT-solution ~ The tech Company</title>
</head>

<body>
    {{>navbar data=details}}

    {{>slider slides=slides}}

    <section class="container" id="services_section">
                <h2 class="text-center py-5 text-secondary">Services Provides by Us</h2>
            <div class="container "style="padding-left: 5rem;">
            <div class="row">
                {{#each services}}
                <div class="col-md-4">
                    <div class="card my-2" style="width: 18rem;">
                        <div class="container text-center icon-size py-2">
                        <i class="fa-solid {{this.icon}}"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="{{this.buttonLink}}" class="btn btn-warning">{{this.button}}</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
         </div>

    </section>
<hr>

{{!-- banner 1 section --}}
<section id="banner1">
    <div class="container text-center py-3" >
        <div class="row">
            <div class="col-md-6 "style="padding-top: 9rem!important;">
                <h2>{{banner.title}}</h2>
                <p>{{banner.description}}</p>
                <button class="btn btn-warning">{{banner.button}}</button>
            </div>
            <div class="col-md-6 text-center"  >
                <img src="{{banner.image}}" alt="">
            </div>
        </div>
    </div>
</section>

{{!-- banner 2 --}}
<section id="banner1">
    <div class="container text-center" >
        <div class="row">
            <div class="col-md-6 text-center" >
                <img src="{{banners.image}}" class="img-fluid" alt="">
            </div>
            <div class="col-md-6" style="padding-top: 9rem!important;">
                <h2>{{banners.title}}</h2>
                <p>{{banners.description}}</p>
                <button class="btn btn-warning">{{banners.button}}</button>
            </div>
            
        </div>
    </div>
</section>









    {{!-- Contact Us Section --}}


    <section class="bg1 my-5 " id="contact_us_section">
        <div class="container">
            <div class="heading container text-center py-5 text-dark "><h2> Feel free To Contact us</h2></div>
            <form action="/process-form" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input name="mail" type="email" class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Contact</label>
    <input name="number" type="number" class="form-control" id="exampleInputPassword1">
  </div>
  <div class="form-floating">
  <textarea name="query" class="form-control my-5" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 200px"></textarea>
  <label for="floatingTextarea2">Just leave your query Here</label>
</div>
  <div class="container text-center">
  <button type="submit" class="btn btn-warning mb-5 border border-dark">Submit</button>
  </div>
</form>
        </div>
    </section>

{{!-- about us section --}}

<section id="about_us">
    <div class="container text-center py-3">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-secondary">{{abouts.title}}</h1>
                <p class="py-3">{{abouts.description}}</p>
                <button class="btn btn-warning mb-3">{{abouts.button}}</button>
            </div>
        </div>
    </div>
</section>


{{!-- footer section  --}}

<footer style="background-color: rgb(87, 87, 87);">
    <div class="container text-center" style="padding-top: 1rem; padding-bottom: 1rem;  color: white;">
        <div class="row">
            <div class="col-md-6">
